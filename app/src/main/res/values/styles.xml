<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="maintheme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/schoolplanerback</item>
        <item name="android:textColor">#ffffc0</item>
        <item name="android:windowTitleSize">24dip</item>
        <item name="android:windowTitleStyle">@style/CustomWindowTitleText</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:listViewStyle">@style/CustomListView</item>
    </style>
    
    <style name="dialogtheme" parent="android:Theme.Dialog">
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:listViewStyle">@style/CustomListView</item>
    </style>
    
    <style name="notitle" parent="android:Theme.NoTitleBar" >
        <item name="android:windowBackground">@drawable/schoolplanerback</item>
        <item name="android:textColor">#ffffc0</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@drawable/titlebar_back_yellow</item>
    </style>
	<style name="CustomWindowTitleText" >
	    <item name="android:textSize">16dip</item>
	    <item name="android:typeface">sans</item>
	   	<item name="android:textColor">#000080</item>
	   	<item name="android:shadowColor">#a0a0a0</item>
	   	<item name="android:shadowRadius">1.5</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	</style>
    
    <style name="CustomButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/buttons</item>
    </style>
	
    <style name="CustomListView" parent="@android:style/Widget.ListView">
        <item name="android:background">#aaffffff</item>
        <item name="android:cacheColorHint">#ffffffff</item>
        <item name="android:divider">#fcca34</item>
        <item name="android:dividerHeight">2dip</item>
    </style>
    
    <style name="Header" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/header_back</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dip</item>
	   	<item name="android:shadowColor">#000000</item>
	   	<item name="android:shadowRadius">1.5</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	</style>

    <style name="InfoButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/info_button</item>
    </style>
    
    <style name="EditTeacherButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/teacher_edit_button</item>
    </style>

    <style name="EditFachButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/fach_edit_button</item>
    </style>
    
    <style name="DeleteButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/delete_button</item>
    </style>
    
    <style name="SettingsSmallButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/settings_small_button</item>
    </style>
    
</resources>